- content_for(:title) do
  Login
- content_for(:all_of_us_helper_header) do
  = render 'layouts/all_of_us_helper_header'
- content_for(:all_of_us_helper_content_header) do
  #all-of-us-helper-content-header
    .row
      .all-of-us-helper-welcome
        %h1
          Login
- content_for(:all_of_us_helper_content) do
  #all-of-us-helper-content
    .row
      = render 'shared/flash'
      .devise
        .session
          %h4 Login with your Northwestern NetID
          .help-text
            Use your Northwestern University NetID and password to login.
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              = f.label :username, 'NetID'
              %br/
              = f.text_field :username, autofocus: true
            .field
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "off"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
            .actions
              .row
                = f.submit "Submit", class: 'button'
                = link_to 'Cancel', new_user_session_url, class: 'cancel-link button warning'
                = render "devise/shared/links"